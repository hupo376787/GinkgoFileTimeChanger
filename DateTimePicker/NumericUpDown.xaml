<UserControl
  x:Class="DateTimePicker.NumericUpDown"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:DateTimePicker"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border>
    <StackPanel Orientation="Horizontal">
      <TextBox
        x:Name="PART_TextBox"
        Width="28"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Background="#88FFFFFF"
        BorderThickness="0"
        FontSize="14"
        Foreground="Gray"
        LostFocus="TextBox_LostFocus"
        PreviewMouseWheel="TextBox_PreviewMouseWheel"
        PreviewTextInput="TextBox_PreviewTextInput"
        Text="{Binding Value, StringFormat=D2, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
      <!--  上下箭头  -->
      <StackPanel
        Background="Transparent"
        DockPanel.Dock="Right"
        Orientation="Vertical">
        <Button
          Width="10"
          Height="12"
          Padding="0"
          Background="Transparent"
          BorderThickness="0"
          Command="{Binding IncreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
          Content="▲"
          FontSize="8"
          Foreground="LightGray" />
        <Button
          Width="10"
          Height="12"
          Padding="0"
          Background="Transparent"
          BorderThickness="0"
          Command="{Binding DecreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
          Content="▼"
          FontSize="8"
          Foreground="LightGray" />
      </StackPanel>
    </StackPanel>
  </Border>
</UserControl>
