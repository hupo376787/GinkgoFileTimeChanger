<UserControl
  x:Class="DateTimePicker.DateTimePickerControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:DateTimePicker"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  x:Name="root"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Border
    BorderBrush="LightGray"
    BorderThickness="1"
    SnapsToDevicePixels="True">

    <DockPanel VerticalAlignment="Center" LastChildFill="False">

      <!--  日期选择器  -->
      <DatePicker
        x:Name="PART_DatePicker"
        Width="110"
        Margin="0,2,4,0"
        Background="Transparent"
        BorderThickness="0"
        FontSize="14"
        SelectedDate="{Binding ElementName=root, Path=SelectedDateTime, Mode=TwoWay}" />

      <!--  时间选择器  -->
      <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

        <!--  时  -->
        <local:NumericUpDown
          Width="36"
          Maximum="23"
          Minimum="0"
          Value="{Binding ElementName=root, Path=Hour, Mode=TwoWay}" />
        <TextBlock
          Margin="4,0"
          VerticalAlignment="Center"
          FontSize="16"
          Text=":" />

        <!--  分  -->
        <local:NumericUpDown
          Width="36"
          Maximum="59"
          Minimum="0"
          Value="{Binding ElementName=root, Path=Minute, Mode=TwoWay}" />
        <TextBlock
          Margin="4,0"
          VerticalAlignment="Center"
          FontSize="16"
          Text=":" />

        <!--  秒  -->
        <local:NumericUpDown
          Width="36"
          Maximum="59"
          Minimum="0"
          Value="{Binding ElementName=root, Path=Second, Mode=TwoWay}" />
      </StackPanel>
    </DockPanel>
  </Border>
</UserControl>
